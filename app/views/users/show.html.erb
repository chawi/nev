<div class="page_middle">

	<% form_for :user, :url => "/users/edit" do |f| %>
		<ul class="formList">
					<li><%= f.label :username, 'Username' %>
					<%= f.text_field(:username) %></li>
						<li><%= f.label :psw, 'Password' %>
					<%= f.password_field(:psw) %></li>
						<li><%= f.label :psw_confirm, 'Password confirmation' %>
					<%= f.password_field(:psw_confirm) %></li>
					<li><%= f.label :email, 'Email' %>
					<%= f.text_field(:email) %></li>
					<li><%= f.label :birth_date, 'Birth date' %>
					<%= f.text_field(:birth_date) %></li>
					<li><%= f.label :free_field, 'Free field' %>
					<%= f.text_area(:free_field) %></li>
					<li>
						<label>&nbsp;</label>
						<%= submit_tag "Update" %>			
					</li>
		</ul>
					

	<% end %>

</div>
