<html>
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<title>Nev 2.0</title>

		<%= stylesheet_link_tag "nev" %>
	</head>

	<body>

		<div class="wrapper">

			<div class="header">
    
			</div>

			<div class="contents">

				<h1>Nev under construction 2.0</h1>

				<hr />

					<div class="toolbar">
						
					</div>
					<br /><br />
					<% if flash[:notice] %>
						<div class="notice">
							<%= flash[:notice] %>
						</div>
					<% end %>

					<% if flash[:warning] %>
						<div class="warning">
							<%= flash[:warning] %>
						</div>
					<% end %>

					<div class="front_page_left">
											
						<ul class="styledList">
							<li>Members</li>
							<li>Characters</li>
							<li>Stories</li>
							<li>Pictures</li>
						</ul>	
	
				</div>	

				<%= yield %>

				<div class="front_page_right">

					<ul class="styledList">
						<li><%= link_to "Me", user_path(session[:current_user_id]) %></li>
						<li><%= link_to "My chars", character_path(session[:current_user_id]) %></li>
						<li>My art</li>
						<li>My stories</li>
						<li>Logout</li>
					</ul>	

				</div>
				


			</div>

			<div class="footer">
				Nev 2.0 Copyright 2009 Laura Ojala. Page created <%= @time %>
			</div>	

		</div>


	</body>

</html>
